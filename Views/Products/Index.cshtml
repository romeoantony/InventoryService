﻿﻿﻿﻿@using InventoryService.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "All Products";
}

<div class="container">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Product</a>
    </p>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="form-actions no-color">
            <p>
                Find by Name or SKU: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-info" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    @if (Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Sku)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th>Assigned Shops</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => product.Name)</td>
                        <td>@Html.DisplayFor(modelItem => product.Sku)</td>
                        <td>@Html.DisplayFor(modelItem => product.Price)</td>
                        <td>@Html.DisplayFor(modelItem => product.Quantity)</td>
                        <td>
                            @if (product.Shops != null && product.Shops.Any())
                            {
                                @string.Join(", ", product.Shops.Select(s => s.Name))
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products found.</p>
    }
</div>