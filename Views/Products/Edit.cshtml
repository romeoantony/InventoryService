@model InventoryService.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<h1>@ViewData["Title"]</h1>
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Sku" class="control-label"></label>
                <input asp-for="Product.Sku" class="form-control" />
                <span asp-validation-for="Product.Sku" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Assign to Shops</label>
                <div class="p-2 border rounded" style="max-height: 200px; overflow-y: auto;">
                    @for (var i = 0; i < Model.AvailableShops.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model.AvailableShops[i].ShopId" />
                            <input type="hidden" asp-for="@Model.AvailableShops[i].ShopName" />
                            <input class="form-check-input" type="checkbox" asp-for="@Model.AvailableShops[i].IsAssigned">
                            <label class="form-check-label">
                                @Model.AvailableShops[i].ShopName
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>